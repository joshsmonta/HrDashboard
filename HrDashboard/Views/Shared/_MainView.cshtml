<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sonic HR Dashboard</title>
    @Styles.Render("~/Css")
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="../../index2.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>S</b>HRS</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Sonic</b>HRS</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button -->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->
                        <li class="dropdown messages-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-envelope-o"></i>
                                <span class="label label-success">4</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">You have 4 messages</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        <li>
                                            <!-- start message -->
                                            <a href="#">
                                                <div class="pull-left">
                                                    <img src="~/Content/dist/img/user8-128x128.jpg" class="img-circle" alt="User Image">
                                                </div>
                                                <h4>
                                                    Support Team
                                                    <small><i class="fa fa-clock-o"></i> 5 mins</small>
                                                </h4>
                                                <p>Why not buy a new awesome theme?</p>
                                            </a>
                                        </li>
                                        <!-- end message -->
                                    </ul>
                                </li>
                                <li class="footer"><a href="#">See All Messages</a></li>
                            </ul>
                        </li>
                        <!-- Notifications: style can be found in dropdown.less -->
                        <li class="dropdown notifications-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-bell-o"></i>
                                <span class="label label-warning">10</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">You have 10 notifications</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        <li>
                                            <a href="#">
                                                <i class="fa fa-users text-aqua"></i> 5 new members joined today
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="footer"><a href="#">View all</a></li>
                            </ul>
                        </li>
                        <!-- Tasks: style can be found in dropdown.less -->
                        <li class="dropdown tasks-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-flag-o"></i>
                                <span class="label label-danger">9</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="header">You have 9 tasks</li>
                                <li>
                                    <!-- inner menu: contains the actual data -->
                                    <ul class="menu">
                                        <li>
                                            <!-- Task item -->
                                            <a href="#">
                                                <h3>
                                                    Design some buttons
                                                    <small class="pull-right">20%</small>
                                                </h3>
                                                <div class="progress xs">
                                                    <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar"
                                                         aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                                                        <span class="sr-only">20% Complete</span>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                        <!-- end task item -->
                                    </ul>
                                </li>
                                <li class="footer">
                                    <a href="#">View all tasks</a>
                                </li>
                            </ul>
                        </li>
                        <!-- User Account: style can be found in dropdown.less -->
                        <li id="userNav" class="dropdown user user-menu">
                            <a href="#" id="userBtn" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <img src="~/Content/dist/img/user8-128x128.jpg" class="user-image" alt="User Image">
                                <span class="hidden-xs">@HttpContext.Current.User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu user-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/Content/dist/img/user8-128x128.jpg" class="img-circle" alt="User Image">
                                    <p>
                                        Joshua Monta - Software Developer
                                        <small>Member since Aug. 2018</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <li class="user-body">
                                    <div class="row">
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Followers</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Sales</a>
                                        </div>
                                        <div class="col-xs-4 text-center">
                                            <a href="#">Friends</a>
                                        </div>
                                    </div>
                                    <!-- /.row -->
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-primary btn-flat">Profile</a>
                                    </div>
                                    @using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm", @class = "pull-right" }))
                                    {
                                        <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-flat">Log off</a>
                                    }
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                        <li>
                            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/dist/img/user8-128x128.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>@HttpContext.Current.User.Identity.Name</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- search form -->
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Search...">
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">Navigation Bar!</li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-pie-chart"></i> Report Charts</a></li>
                            <li><a href="#"><i class="fa fa-line-chart"></i> Sample Charts</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "AlphaList")">
                            <i class="fa fa-users"></i> <span>Alphalist</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "BetaList")">
                            <i class="fa fa-mortar-board"></i> <span>Recruitment</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-cubes"></i> <span>Organization by Division</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a id="divFams" href="@Url.Action("FamsIndex", "Chart")"><i class="fa fa-anchor"></i> FAMS</a></li>
                            <li><a id="divCad" href="@Url.Action("CadIndex", "Chart")"><i class="fa fa-tripadvisor"></i> CAD</a></li>
                            <li><a id="divLog" href="@Url.Action("LogIndex", "Chart")"><i class="fa fa-truck"></i> Logistics</a></li>
                            <li><a id="divSales" href="@Url.Action("SodIndex", "Chart")"><i class="fa fa-black-tie"></i> Sales Ops</a></li>
                            <li><a href="@Url.Action("CanaanIndex", "Chart")"><i class="fa fa-paw"></i> Canaan Farm</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("BusinessUnitIndex", "Chart")">
                            <i class="fa fa-cubes"></i> <span>BusinessUnit Organization</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-dashboard"></i> <span>Company Positions</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a id="addpos" href="@Url.Action("PosIndex", "Position")"><i class="fa fa-user-plus"></i> Add New Positions</a></li>
                            <li><a id="occpos" href="@Url.Action("ActivePositions", "Position")"><i class="fa fa-circle"></i> Occupied Positions</a></li>
                            <li><a id="inapos" href="@Url.Action("InactivePosition", "Position")"><i class="fa fa-frown-o"></i> Inactive Positions</a></li>
                            <li><a id="vacpos" href="@Url.Action("VacantPositions", "Position")"><i class="fa fa-circle-o"></i> Vacant Positions</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-bell"></i> <span>Staff Requests</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="../../index.html"><i class="fa fa-circle-o"></i> Requisition Requests</a></li>
                            <li><a href="../../index2.html"><i class="fa fa-circle-o"></i> Movement Requests</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-bell"></i> <span>Reports</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a id="divisionPdf" href="#"><i class="fa fa-circle-o"></i> Division</a></li>
                            <li><a href="#"><i class="fa fa-circle-o"></i> Business Unit</a></li>
                            <li><a href="#"><i class="fa fa-circle-o"></i> Positions</a></li>
                            <li><a href="#"><i class="fa fa-circle-o"></i> Sana All Reports</a></li>
                        </ul>
                    </li>

                    <!--This is only visible to admins-->
                        <li class="header">Admin Options</li>
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-male"></i> <span>User Manager</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("Registration", "User")"><i class="fa fa-circle-o"></i> User Registration</a></li>
                                <li><a href="../../index2.html"><i class="fa fa-circle-o"></i> Users Table</a></li>
                            </ul>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-trash"></i> <span>Archives</span>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left pull-right"></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li><a href="@Url.Action("Retirees", "AlphaList")"><i class="fa fa-circle-o"></i> Former Employees</a></li>
                                <li><a href="@Url.Action("LogbookIndex", "Home")"><i class="fa fa-circle-o"></i> Logs</a></li>
                            </ul>
                        </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; 2018-2019 <a href="file:///D:/User/EJ.Monta/Desktop/Projects/Sonic%20Landing%20Page/index.html">Sonic Technologies</a>.</strong> All rights
            reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li><a href="#control-sidebar-settings-tab" data-toggle="tab"><i class="fa fa-gears"></i></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane" id="control-sidebar-home-tab">
                </div>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    @Scripts.Render("~/Js")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            $('.sidebar-menu').tree();

            $("#addpos").on("click", function () {
                window.localStorage.setItem("editPosBool", 0);
            });
            $("#occpos").on("click", function () {
                window.localStorage.setItem("editPosBool", 1);
            });
            $("#inapos").on("click", function () {
                window.localStorage.setItem("editPosBool", 1);
            });
            $("#vacpos").on("click", function () {
                window.localStorage.setItem("editPosBool", 1);
            });

            $("#divFams").on("click", function () {
                window.localStorage.setItem("byBuIndicator", 0);
            });
            $("#divCad").on("click", function () {
                window.localStorage.setItem("byBuIndicator", 0);
            });
            $("#divLog").on("click", function () {
                window.localStorage.setItem("byBuIndicator", 0);
            });
            $("#divSales").on("click", function () {
                window.localStorage.setItem("byBuIndicator", 0);
            });
        });
    </script>
</body>
</html>
